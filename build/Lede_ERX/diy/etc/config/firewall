config rule
	option src_port '546'
	option src 'wan'
	option name 'Allow DHCPv6 (547-to-546)'
	option target 'ACCEPT'
	option family 'ipv6'
	option dest_port '547'
	option dest 'lan'
	list proto 'udp'

config rule
	list proto 'tcp'
	option target 'ACCEPT'
	option dest_port '28967'
	list dest_ip '192.168.88.252'
	option src 'wan'
	option name 'ALLOW_NAS_Input'

config rule
	option src 'wan'
	option target 'ACCEPT'
	option dest_port '40381'
	option name 'ALLOW_Input_PT_Forward'
	option dest 'lan'
	option family 'ipv6'
	list dest_ip 'fe80::211:32ff:fe40:1554'

config rule
	option src_port '8123-8124'
	option src 'wan'
	option name 'ALLOW_Hass_input_Forward'
	option dest 'lan'
	list dest_ip '192.168.88.238'
	option target 'ACCEPT'
	option dest_port '8123-8124'
	option enabled '0'
	option family 'ipv6'

config include 'miniupnpd'
	option type 'script'
	option path '/usr/share/miniupnpd/firewall.include'
	option family 'any'
	option reload '1'

config rule
	option name 'Allow-IPv6-HOST_NAME'
	option src 'wan'
	option dest 'lan'
	option target 'ACCEPT'
	list dest_ip 'HOST_IPV6_ADDR'
	list dest_ip 'fe80::7a8a:20ff:febd:b786'
	list dest_ip 'fe80::1'

config forwarding
	option dest 'wan'
	option src 'lan'

config rule
	option src_port '25565'
	option src 'wan'
	option name 'MyWord'
	option dest 'lan'
	option target 'REJECT'
	option dest_port '25565'

